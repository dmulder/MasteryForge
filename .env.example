# MasteryForge Environment Configuration
# Copy this file to .env and customize for your deployment

# Django Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a new one with: openssl rand -base64 32
DJANGO_SECRET_KEY=django-insecure-change-me-in-production

# Debug Mode - Set to False in production
DJANGO_DEBUG=True

# Allowed Hosts - Comma-separated list of domains/IPs
# Examples:
#   DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
#   DJANGO_ALLOWED_HOSTS=192.168.1.100,masteryforge.local
#   DJANGO_ALLOWED_HOSTS=*  (allows all - not recommended for production)
DJANGO_ALLOWED_HOSTS=*

# OpenAI API Key (Optional)
# Get your key from: https://platform.openai.com/api-keys
# Leave empty if you don't want AI features
OPENAI_API_KEY=

# Examples:
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
